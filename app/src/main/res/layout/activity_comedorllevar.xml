<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- WebView for displaying website content -->
    <WebView
        android:id="@+id/webviewComedorLlevar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationViewComedorLlevar"
        android:layout_marginBottom="65dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnNavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/webviewComedorLlevar"
        android:layout_centerHorizontal="true"
        android:text="MenÃº presencial"
        android:layout_marginTop="-50dp"/>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewComedorLlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        android:background="@color/white"/>

</RelativeLayout>
