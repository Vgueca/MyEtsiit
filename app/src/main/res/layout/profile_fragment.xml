<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.AppCompat">

    <!-- Nuevo LinearLayout para el texto y el botón -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"> <!-- Añade padding para separar del ImageView -->

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Foto de perfil"
            android:src="@drawable/npc" />



        <!-- Nuevo LinearLayout para el texto y el botón -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="16dp"> <!-- Añade padding para separar del ImageView -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="8dp"> <!-- Añade padding para separar del ImageView -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario:"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingStart="8dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonChangePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar foto perfil" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"> <!-- Añade padding para separar del ImageView -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiante de Ingeniería Informática "
            android:textStyle="bold"
            android:textSize="19sp" />

    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" /> <!-- Ajusta este valor según sea necesario -->





</LinearLayout>
